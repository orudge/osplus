#/usr/bin/sh
#
# Build script for Linux - you may need to modify the Turbo Vision include path
# I'll get a makefile done one of these days ;-)
#
echo "Building OSPlus Text Editor with sound..."
gcc -o bin/linuxsnd/ospedit src/verinfo.cpp src/aboutosp.cpp src/aboutdlg.cpp src/ospedit1.cpp src/ospedit2.cpp src/ospedit3.cpp src/sound.c -I/root/tvision/include -lrhtv -lalleg -lalleg_unsharable -lm -lXxf86dga -lXxf86vm -lXext -lvga -lesd -D__LINUX__ -L/usr/X11R6/lib
echo "Building OSPlus Text Editor without sound..."
gcc -o bin/linux/ospedit src/verinfo.cpp src/aboutosp.cpp src/aboutdlg.cpp src/ospedit1.cpp src/ospedit2.cpp src/ospedit3.cpp src/sound.c libc.c -I/root/tvision/include -lrhtv -D__LINUX__ -DLINUX_NO_SOUND_SUPPORT
echo "Building TXTWRITE.CNV..."
gcc -o bin/linux/txtwrite.cnv src/convert/txtwrite.c -D__LINUX__
cp bin/linux/txtwrite.cnv bin/linuxsnd/txtwrite.cnv
echo "Building TXTRTF.CNV..."
gcc -o bin/linux/txtrtf.cnv src/convert/rtfactn.c src/convert/rtfreadr.c -D__LINUX__
cp bin/linux/txtrtf.cnv bin/linuxsnd/txtrtf.cnv
